from django.db import models
from django.urls import reverse

# Definindo a classe do modelo Book
class Book(models.Model):
    # Campo para armazenar o título do livro
    title = models.CharField(max_length=200, help_text='Enter the title of the book')
    
    # Campo para armazenar a data de publicação do livro
    pubdate = models.DateField()

    # Classe Meta para fornecer metadados sobre o modelo
    class Meta:
        # Especifica a ordem padrão de classificação das instâncias do modelo
        ordering = ['title', '-pubdate']
        
        # Nome mais legível para o modelo na interface administrativa do Django
        verbose_name = 'BetterName'

    # Método para representar uma instância do modelo como string
    def __str__(self):
        return self.title

    # Método para obter o URL absoluto para acessar uma instância específica do modelo
    def get_absolute_url(self):
        return reverse('book-detail', args=[str(self.id)])
