# Criando uma instância do modelo Livro com um valor para o campo titulo
registro = Livro(titulo="Instância #1")

# Salvando a instância no banco de dados
registro.save()

# Imprimindo o ID atribuído à instância após ser salva no banco de dados
print(registro.id)

# Imprimindo o valor do campo titulo na instância
print(registro.titulo)

# Atualizando o valor do campo titulo na instância existente
registro.titulo = "Novo Nome da Instância"

# Salvando a instância atualizada no banco de dados
registro.save()

# Obtendo todas as instâncias do modelo Livro
todos_livros = Livro.objects.all()

# Obtendo livros cujo título contém a palavra 'selvagem'
livros_selvagens = Livro.objects.filter(titulo__contains='selvagem')

# Obtendo a contagem de livros cujo título contém a palavra 'selvagem'
numero_livros_selvagens = Livro.objects.filter(titulo__contains='selvagem').count()

# Obtendo livros que contêm o gênero com o nome contendo 'ficção'
livros_com_genero = Livro.objects.filter(genero__nome__icontains='ficção')


