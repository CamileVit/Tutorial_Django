from django.urls import path
from . import views  # Importa as views do aplicativo

# Define padrões de URL para o aplicativo de catálogo
urlpatterns = [
    # Página inicial (URL: /catalog/)
    path('', views.index, name='index'),
    # 1. Página inicial: Este padrão corresponde à URL raiz do aplicativo (/catalog/). A função view associada é 'index'.
    # Nome do mapeamento: 'index'.

    # Lista de livros (URL: /catalog/books/)
    path('books/', views.BookListView.as_view(), name='books'),
    # 2. Lista de livros: Este padrão corresponde à URL para a lista de livros (/catalog/books/).
    # A função view associada é 'BookListView.as_view()', que é uma visualização baseada em classe.
]
