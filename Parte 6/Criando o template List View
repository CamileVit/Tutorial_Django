  <!-- Navigation links -->
  <ul>
    <!-- Link para a página inicial -->
    <li><a href="{% url 'index' %}">Home</a></li>

    <!-- Link para a lista de todos os livros -->
    <li><a href="{% url 'books' %}">All books</a></li>

    <!-- Link para a lista de todos os autores -->
    <li><a href="">All authors</a></li>
  </ul>

  <!-- Conteúdo específico da página (será substituído nos templates filhos) -->
  <div id="content">
    {% block content %}{% endblock %}
  </div>
</body>
</html>
