<!-- /locallibrary/catalog/templates/catalog/book_list.html -->

{% extends "catalog/base_generic.html" %}

{% block content %}
  <!-- Título da página -->
  <h1>Book List</h1>

  <!-- Verifica se há livros na lista my_book_list -->
  {% if my_book_list %}
    <ul>
      <!-- Loop for que itera sobre cada livro na lista -->
      {% for book in my_book_list %}
        <li>
          <!-- Exibe um link para a página de detalhes do livro (usando get_absolute_url) -->
          <a href="{{ book.get_absolute_url }}">{{ book.title }}</a> ({{ book.author }})
        </li>
      {% endfor %}
    </ul>
  <!-- Bloco executado se não houver livros na lista -->
  {% else %}
    <p>There are no books in the library.</p>
  {% endif %}
{% endblock %}

# Atualizando o template base
