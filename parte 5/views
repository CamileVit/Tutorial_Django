# Criação das views
#view coleta dados do banco de dados por meio dos modelos do Django, contabiliza informações importantes
sobre livros, instâncias de livros e autores, e então passa esses dados para o template 

from django.shortcuts import render

from catalog.models import Book, Author, BookInstance, Genre

def index(request):
    """View function for home page of site."""

    # Gere contagens de alguns dos objetos principais
    
    num_books = Book.objects.all().count()
    num_instances = BookInstance.objects.all().count()

    # Avaliando books (status = 'a')
    num_instances_available = BookInstance.objects.filter(status__exact='a').count()

    num_authors = Author.objects.count()

    context = {
        'num_books': num_books,
        'num_instances': num_instances,
        'num_instances_available': num_instances_available,
        'num_authors': num_authors,
    }

    # Renderiza o template HTML index.html com os dados na variável de contexto
    return render(request, 'index.html', context=context)


