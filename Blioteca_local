#conexão django

django-admin startproject local_library
cd local_library

#criação do app para a biblioteca
python manage.py startapp catalog

#configuração da URLs

from django.contrib import admin
from django.urls import include, path

urlpatterns = [
    path('admin/', admin.site.urls),
    path('catalog/', include('catalog.urls')),
]

#definição de visualização

from django.shortcuts import render

def index(request):
    return render(request, 'catalog/index.html')

def books(request):
    return render(request, 'catalog/books.html')

#templates index.html
<!DOCTYPE html>
<html>
<head>
    <title>Biblioteca Local</title>
</head>
<body>
    <h1>Bem-vindo à Biblioteca Local!</h1>
    <p>Encontre os melhores livros para ler em nossa biblioteca.</p>
    <a href="{% url 'books' %}">Ver Livros Disponíveis</a>
</body>
</html>

#templates livros.html
<!DOCTYPE html>
<html>
<head>
    <title>Livros Disponíveis</title>
</head>
<body>
    <h1>Livros Disponíveis na Biblioteca</h1>
    <ul>
        <li>Livro 1</li>
        <li>Livro 2</li>
        <li>Livro 3</li>
        <!-- Adicione mais livros aqui -->
    </ul>
</body>
</html>

#Definição URLs aplicativos
from django.urls import path
from . import views

urlpatterns = [
    path('', views.index, name='index'),
    path('books/', views.books, name='books'),
]

#execução 

python manage.py runserver
