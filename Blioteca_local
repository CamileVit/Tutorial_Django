#conexão django

django-admin startproject local_library
cd local_library
python manage.py startapp catalog

#modelo de dados

from django.db import models
from django.urls import reverse
import uuid

class Genero(models.Model):
    nome = models.CharField(max_length=200, help_text='Digite o gênero do livro (e.g. Ficção Científica)')

    def __str__(self):
        return self.nome

class Livro(models.Model):
    titulo = models.CharField(max_length=200)
    autor = models.ForeignKey('Autor', on_delete=models.SET_NULL, null=True)
    resumo = models.TextField(max_length=1000, help_text='Digite uma breve descrição do livro')
    isbn = models.CharField('ISBN', max_length=13, unique=True, help_text='13 caracteres <a href="https://www.isbn-international.org/content/what-isbn">ISBN number</a>')
    genero = models.ManyToManyField(Genero, help_text='Selecione um gênero para este livro')

    def __str__(self):
        return self.titulo

class LivroInstance(models.Model):
    id = models.UUIDField(primary_key=True, default=uuid.uuid4, help_text='ID único para este livro em particular em toda a biblioteca')
    livro = models.ForeignKey('Livro', on_delete=models.RESTRICT, null=True)
    data_devolucao = models.DateField(null=True, blank=True)

    EMPRESTADO = 'e'
    DISPONIVEL = 'd'
    MANUTENCAO = 'm'
    RESERVADO = 'r'

    STATUS_LIVRO = (
        (EMPRESTADO, 'Emprestado'),
        (DISPONIVEL, 'Disponível'),
        (MANUTENCAO, 'Em manutenção'),
        (RESERVADO, 'Reservado'),
    )

    status = models.CharField(
        max_length=1,
        choices=STATUS_LIVRO,
        blank=True,
        default=DISPONIVEL,
        help_text='Disponibilidade do livro',
    )

    class Meta:
        ordering = ['data_devolucao']

    def __str__(self):
        return f'{self.id} ({self.livro.titulo})'

#configuração URls

from django.urls import path
from . import views

urlpatterns = [
    path('', views.index, name='index'),
    path('livros/', views.LivroListView.as_view(), name='livros'),
    path('livro/<int:pk>', views.LivroDetailView.as_view(), name='livro-detail'),
]

#conficuração URLs do projeto

from django.contrib import admin
from django.urls import include, path

urlpatterns = [
    path('admin/', admin.site.urls),
    path('catalog/', include('catalog.urls')),
]

#execução do servidor

python manage.py makemigrations
python manage.py migrate
python manage.py runserver

